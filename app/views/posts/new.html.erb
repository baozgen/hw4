<div class="row mt-3 mb-3">
  <div class="col">
    <h1>New Post</h1>
  </div>
</div>

<%= form_with :model => @post do |form| %>
  <%= form.hidden_field "place_id" %>
  <div class="mb-3">
    <%= form.label "title", class: "form-label" %>
    <%= form.text_field "title", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "description", class: "form-label" %>
    <%= form.text_field "description", class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label "posted_on", class: "form-label" %>
    <%= form.date_field "posted_on" %>
  </div>

  <div class="mb-3">
    <%= form.label "uploaded_image", :class => "form-label" %>
    <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif", :class => "form-control" %>
  </div>

    <%= form.submit "Submit", class: "btn btn-primary"  %>

<% end %>



