<div class="row mt-3 mb-3">
  <div class="col">
    <h1><%= @place["name"] %></h1>
  </div>
</div>

<% if @current_user %>
  <div class="row mt-2 mb-2">
    <div class="col">
      <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
    </div>
  </div>

  <div class="row mt-4 mb-4">
    <div class="col">
      <h2>My Posts</h2>
    </div>
  </div>

  <div class="row gy-5">
    <% for post in @posts %>
      <div class="col-md-4 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>

        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
          <img src="https://www.newegg.com/insider/wp-content/uploads/windows_xp_bliss-wide.jpg" class="img-fluid">
        <% end %>

        <p><%= post["description"] %></p>
        <%= button_to "Delete", post, :method => "delete", class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>

  <div class="row mt-4 mb-4">
    <div class="col">
      <a href="/places" class="btn btn-secondary"> Back to All Places</a>
    </div>
  </div>
<% end %>
