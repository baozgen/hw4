<div class="row mt-3 mb-3">
  <div class="col">
    <h1>Places</h1>
  </div>
</div>

<div class="row mt-2 mb-2">
  <div class="col">
    <a href="/places/new/" class="btn btn-success">New Place</a>
  </div>
</div>

<div class="row" >
  <div class="col col-lg-4">
    <ul class="list-group list-group-flush mt-2">
      <% for place in @places %>
        <li class="list-group-item"><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
      <% end %>
    </ul>
  </div>
</div>



  


